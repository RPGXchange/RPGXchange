{
  "$schema": "../../../../schemas/functions.schema.json",
  "calcModifier": {
    "parameters": {
      "abilityScore": {
        "type": "integer"
      }
    },
    "body": "{floor((abilityScore - 10) / 2)}",
    "returnType": "integer",
    "description": "Calculates the modifier score for a given ability score"
  }
}
